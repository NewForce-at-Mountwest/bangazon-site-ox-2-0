@model IEnumerable<BangazonSite.Models.ProductType>

@{
    ViewData["Title"] = "Index";
}

<h1>Product Types</h1>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var type in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(type.Name, "Details", "ProductTypes", new { Id = type.ProductTypeId }, null) (@Html.DisplayFor(modelType => type.Quantity))
                    @foreach (var product in type.Products)
                    {
                        <ul>
                            @Html.ActionLink(product.Title, "Details", "Products", new { Id = product.Id }, null)
                        </ul>


                    }
                </td>

            </tr>
        }
    </tbody>
</table>